    "/create-tour": {
      "post": {
        "description": "Create a new tour. Fields marked as required must be provided. Optional fields default to 'N/A' if empty.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "title",
                "pick_up",
                "drop_off",
                "duration",
                "duration_unit"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "example": "City Sightseeing Tour",
                  "description": "Cannot be numeric"
                },
                "description": {
                  "type": "string",
                  "example": "A fun tour around the city",
                  "description": "Optional. Defaults to 'N/A' if empty. Cannot be numeric.",
                  "nullable": true
                },
                "pick_up": {
                  "type": "string",
                  "example": "Hotel Lobby",
                  "description": "Cannot be numeric"
                },
                "meeting_point": {
                  "type": "string",
                  "example": "Central Square",
                  "description": "Optional. Defaults to 'N/A' if empty. Cannot be numeric.",
                  "nullable": true
                },
                "drop_off": {
                  "type": "string",
                  "example": "Hotel Lobby",
                  "description": "Cannot be numeric"
                },
                "duration": {
                  "type": "number",
                  "example": 3,
                  "description": "Must be a numeric value"
                },
                "duration_unit": {
                  "type": "string",
                  "example": "hours",
                  "description": "Must be a string describing the unit of duration"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Tour created successfully",
            "schema": {
              "$ref": "#/definitions/Tour"
            }
          },
          "400": {
            "description": "Invalid input or missing required fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "x-stoplight": {
          "id": "2n004d02x4xt5"
        },
        "summary": "Create a New Tour"
      }
    },
    "/update-tour/{id}": {
      "put": {
        "description": "Update an existing tour by ID. All fields are optional, but string fields cannot be numeric and duration must be numeric.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the tour to update"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "Updated Tour Title",
                  "description": "Cannot be numeric"
                },
                "description": {
                  "type": "string",
                  "example": "Updated description",
                  "description": "Optional. Cannot be numeric",
                  "nullable": true
                },
                "pick_up": {
                  "type": "string",
                  "example": "New Pick Up Location",
                  "description": "Cannot be numeric"
                },
                "meeting_point": {
                  "type": "string",
                  "example": "Updated Meeting Point",
                  "description": "Optional. Cannot be numeric",
                  "nullable": true
                },
                "drop_off": {
                  "type": "string",
                  "example": "New Drop Off Location",
                  "description": "Cannot be numeric"
                },
                "duration": {
                  "type": "number",
                  "example": 4,
                  "description": "Must be numeric"
                },
                "duration_unit": {
                  "type": "string",
                  "example": "hours",
                  "description": "Unit of duration"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tour updated successfully",
            "schema": {
              "$ref": "#/definitions/Tour"
            }
          },
          "400": {
            "description": "Invalid input or numeric garbage in string fields"
