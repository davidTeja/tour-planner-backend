    "/get-tour/{id}": {
      "get": {
        "description": "Fetch a single tour by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Unique ID of the tour"
          }
        ],
        "responses": {
